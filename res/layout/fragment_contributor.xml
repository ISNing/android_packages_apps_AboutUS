<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.contributor.ContributorFragment"
              android:id="@+id/fragment_contributor">

    <TextView
            android:gravity="center"
            android:id="@+id/contributors_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@color/exthmui_main_color"
            android:textSize="24sp"
            android:text="@string/title_exthmui_contributors"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contributor_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>